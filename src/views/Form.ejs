    <script>
      function createSnowflake() {
        const snowflake = document.createElement("div");
        snowflake.className = "snowflake";
        snowflake.innerHTML = "❄";
        document.getElementById("snowfall-container").appendChild(snowflake);

        const initialPosition = Math.random() * window.innerWidth;
        snowflake.style.left = `${initialPosition}px`;

        snowflake.style.animation = `snowfall ${
          Math.random() * 4 + 2
        }s linear infinite`;

        setTimeout(() => {
          snowflake.remove();
        }, Math.random() * 3000 + 1000);
      }

      function createSnowfall() {
        setInterval(createSnowflake, 100);
      }

      createSnowfall();

      function saveTask() {
        var taskName = document.getElementById("taskName").value;
        var taskDescription = document.getElementById("taskDescription").value;

        // Validation
        if (taskName.length < 3) {
          document.getElementById("error").innerHTML =
            "Task name must be at least 3 characters.";
          return;
        }

        document.getElementById("error").innerHTML = "";

        alert("Task saved successfully!");

        document.getElementById("taskName").value = "";
        document.getElementById("taskDescription").value = "";
      }
    </script>
